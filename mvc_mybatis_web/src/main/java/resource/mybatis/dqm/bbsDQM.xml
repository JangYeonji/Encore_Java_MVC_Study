<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="encore.bbs">
		<select id="listRow" resultType="bbs_vo">
			SELECT SEQ, SUBJECT, CONTENT, WRITER, REGDATE, VIEWCNT
			FROM BBS_TBL
			ORDER BY SEQ DESC
		</select>
		
		<insert id="insertRow" parameterType="bbs_vo" >
			INSERT INTO BBS_TBL
			VALUES (bbs_seq.nextval, #{subject}, #{content}, #{writer}, sysdate, 0)
		</insert>
		
		<select id="readRow" resultType="bbs_vo">
			SELECT SEQ, SUBJECT, CONTENT, WRITER, REGDATE, VIEWCNT
			FROM BBS_TBL
			WHERE SEQ=#{seq}
		</select>
		
		<update id="upCntRow" parameterType="bbs_vo">
			UPDATE BBS_TBL
			SET VIEWCNT = VIEWCNT+1
			WHERE SEQ=#{seq}
		</update>
		
		<delete id="deleteRow" parameterType="bbs_vo">
			DELETE FROM BBS_TBL
			WHERE SEQ=#{seq}
		</delete>
</mapper>
























